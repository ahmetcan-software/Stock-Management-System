@model List<Product>
@{
    ViewData["Title"] = "List";
    Layout = "~/Views/Shared/_ProductLayout.cshtml";
}

<h3>Ürünler</h3>

<div class="row">
    @foreach (var p in Model)
    {
        <div class="col-md-4">
            <div class="card mb-3">
                <div class="card-header text-center">
                    <h5 class="card-title">@p.Name</h5>
                </div>
                @* <img src="..." class="card-img-top" alt="..."> *@
                <div class="card-body text-center">
                    <p class="card-text">Fiyat : @string.Format("{0:C2}", p.Price)</p>
                    <a asp-controller="Product" asp-action="Details" asp-route-id="@p.Id" class="btn btn-primary">Details</a>
@*                     <a href="/Product/Details/@p.Id"class="btn btn-primary">Details</a> *@
                </div>
            </div>
        </div>
    }
</div>

